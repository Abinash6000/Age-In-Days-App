<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="25dp"
    android:orientation="vertical"
    android:background="#caf0f8"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:textColor="#03045e"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:textColor="#03045e"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age In Days"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:layout_marginTop="25dp"
        android:textColor="#03045e"
        />
    <Button
        android:id="@+id/datePickerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:layout_marginTop="25dp"
        android:backgroundTint="#0077b6"
android:textSize="17sp"
        />
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31/8/2022"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:textColor="#00b4d8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date"
        android:fontFamily="monospace"
        android:textSize="17sp"
        android:textColor="#90e0ef"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/tvAgeInDays"
        android:fontFamily="monospace"
        android:textSize="60sp"
        android:layout_marginTop="25dp"
        android:textColor="#00b4d8"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Days Old"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:textColor="#90e0ef"
        />

</LinearLayout>